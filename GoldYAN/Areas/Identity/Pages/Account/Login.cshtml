@page
@model LoginModel

@{ ViewData["Title"] = "Log in"; }





        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">
                    @*<div class="login100-form-title-1" style="background-image:url(/img/Logo.png); width: 100%; height:95%; margin-top: 10px; margin-bottom:10px" >

                    </div>*@
                    <center style="background-color: grey;"><img src="~/img/LogoLogin.png" class="login100-form-title-1" asp-append-version="true" width="400"></center>

                    <form class="login100-form card" method="post" id="account">

                        <div class="wrap-input100 m-b-26 form-group">
                            <span asp-for="Input.Email" class="label-input100">Email</span>
                            <input asp-for="Input.Email" class="input100" placeholder="Enter Email">
                            <span asp-validation-for="Input.Email" class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 m-b-18 form-group">
                            <span asp-for="Input.Password" class="label-input100">Password</span>
                            <input asp-for="Input.Password" class="input100" placeholder="Enter password">
                            <span asp-validation-for="Input.Password" class="focus-input100"></span>
                        </div>

                        <div class="flex-sb-m w-full p-b-30">
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe" class="custom-checkbox">
                                        <input asp-for="Input.RememberMe" />
                                        <label>Lembrar-me</label>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="container-login100-form-btn">
                            <button type="submit" class="login100-form-btn form-footer">
                                Entrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>












