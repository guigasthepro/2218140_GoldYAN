<div class="container">
    <div class="row">
        <div class="col col-lg-5 mx-auto">
            <div class="text-center mb-6">
                <img src="~/images/HS.png" asp-append-version="true" height="50" alt="">
            </div>
            <form class="card" method="post" id="account">

                <div class="card-body p-6">
                    <div class="card-title">HexaSaude</div>
                    <div class="form-group">
                        <label class="form-label" asp-for="Input.Email">Email</label>
                        <input asp-for="Input.Email" class="form-control" placeholder="">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label" asp-for="Input.Password">Password</label>
                        <input asp-for="Input.Password" class="form-control" placeholder="">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <a asp-page="./ForgotPassword" class="float-right small" id="forgot-password">Esqueci-me da password</a>
                    </div>

                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="custom-checkbox">
                                <input asp-for="Input.RememberMe" />
                                <label>Lembrar-me</label>
                            </label>
                        </div>
                    </div>
                    <div class="form-footer">
                        <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
