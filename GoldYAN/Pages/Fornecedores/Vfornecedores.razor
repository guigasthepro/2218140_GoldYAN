@code {

    List<Fornecedores> vFornecedor = new List<Fornecedores>();
    Fornecedores eFornecedor = new Fornecedores();
    public string Filter { get; set; }
    bool showModal = false;


    protected override async Task OnInitializedAsync()
    {
        vFornecedor = FC.GetAll();
    }

    public bool IsVisible(Fornecedores fornecedor)
    {
        if (string.IsNullOrEmpty(Filter))
            return true;

        if (fornecedor.nome.Contains(Filter) || fornecedor.morada.ToString().Contains(Filter) || fornecedor.localizaçao.ToString().Contains(Filter) || fornecedor.codigo.ToString().Contains(Filter))

            return true;

        return false;
    }

    public async Task Apagar(int id)
    {
        FC.Delete(id);
    }

    public async Task Update()
    {
        FC.Put(eFornecedor.idfornecedor, eFornecedor);
        eFornecedor = new Fornecedores();
        showModal = false;
        StateHasChanged();
        OnInitializedAsync();
    }

    public async Task ShowModal(int id)
    {
        eFornecedor = FC.Get(id);
        showModal = true;
    }

    public async Task ModalCancel()
    {
        showModal = false;
    }
}
