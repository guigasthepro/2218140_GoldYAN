@page "/Cfornecedores"
@using GoldYAN.Data
@inject IJSRuntime JsRuntime
@attribute [Authorize]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Formulario Encomenda</h6>
        </div>
        <EditForm Model="@cfornecedor" OnValidSubmit="@CriarFornecedor">
            <DataAnnotationsValidator />

            <div class="m-3 form-group">
                <div class="form-inline">
                    <label for="Descricao">Codigo Fornecedor:</label> &nbsp
                    <InputText autocomplete="false" id="Descricao" oninput="this.value = this.value.toUpperCase()" class="form-control" placeholder="Codigo do fornecedor" @bind-Value="cfornecedor.codigo" />
                </div>
            </div>

            <div class="m-3 form-group">
                <div class="form-inline">
                    <label for="Quantidade">Nome Fornecedor:</label> &nbsp
                    <InputText autocomplete="false" id="Quantidade" class="form-control" placeholder="Nome do fornecedor" @bind-Value="cfornecedor.nome" />
                </div>
            </div>

            <div class="m-3 form-group">
                <div class="form-inline">
                    <label for="peso">Contacto:</label> &nbsp
                    <InputText autocomplete="false" id="peso" class="form-control" placeholder="Contacto do fornecedor" @bind-Value="cfornecedor.contacto" />
                </div>
            </div>

            <div class="m-3 form-group">
                <div class="form-inline">
                    <label for="preco">Nif:</label> &nbsp
                    <InputText autocomplete="false" id="preco" class="form-control" placeholder="Nif do Fornecedor" @bind-Value="cfornecedor.nif" />
                </div>
            </div>

            <div class="m-3 form-group">
                <div class="form-inline">
                    <label for="apontamentos">Morada:</label> &nbsp
                    <InputText autocomplete="false" id="apontamentos" class="form-control" placeholder="Morada Fornecedor" oninput="this.value = this.value.toUpperCase()" @bind-Value="cfornecedor.morada" />
                </div>
            </div>

            <div class="m-3 form-group">
                <div class="form-inline">
                    <label for="datadeentrega">Localização:</label> &nbsp
                    <InputText autocomplete="false" id="datadeentrega" placeholder="Localização Fornecedor" class="form-control" @bind-Value="cfornecedor.localizaçao" />
                </div>
            </div>

            <div class="m-3 form-group">
                <div class="form-inline">
                    <label for="datadeentrega">Código Postal:</label> &nbsp
                    <InputText autocomplete="false" id="datadeentrega" placeholder="Codigo Postal Fornecedor" class="form-control" @bind-Value="cfornecedor.codigopostal" />
                </div>
            </div>

            <div class="m-3 form-group">
                <div class="form-inline">
                    <label for="datadeentrega">Telefone:</label> &nbsp
                    <InputText autocomplete="false" id="datadeentrega" placeholder="Telefone Fornecedor" class="form-control" @bind-Value="cfornecedor.telefone" />
                </div>
            </div>

            <div class="m-3 form-group">
                <div class="form-inline">
                    <label for="datadeentrega">Telemovel:</label> &nbsp
                    <InputText autocomplete="false" id="datadeentrega" placeholder="Telemovel Fornecedor" class="form-control" @bind-Value="cfornecedor.telemovel" />
                </div>
            </div>

            <div class="m-3 form-group">
                <div class="form-inline">
                    <label for="datadeentrega">Nome Vendedor:</label> &nbsp
                    <InputText autocomplete="false" id="datadeentrega" class="form-control" placeholder="Nome do Vendedor" @bind-Value="cfornecedor.nomevendedor" />
                </div>
            </div>

            <div class="m-3 form-group">
                <div class="form-inline">
                    <label for="datadeentrega">Telemovel Vendedor:</label> &nbsp
                    <InputText autocomplete="false" id="datadeentrega" placeholder="Telefone do vendedor" class="form-control" @bind-Value="cfornecedor.telemovelvendedor" />
                </div>
            </div>

            <div class="m-3 form-group">
                <button type="submit" class="btn btn-primary">Adicionar</button>
            </div>
        </EditForm>
    </div>
</div>


