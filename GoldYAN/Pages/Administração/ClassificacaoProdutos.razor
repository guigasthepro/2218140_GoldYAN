@using GoldYAN.Controller
@using GoldYAN.Data
@page "/classificacaoprodutos"
@inject IJSRuntime js
@inject ClassificacaoProdutosController VCP
@attribute [Authorize]


@if (showModal)
{
    <div class="modal fade show" id="myModal" style="display:block" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Atualizar Informação</h4>
                    <button type="button" class="close" @onclick="@ModalCancel">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <EditForm Model="@updateCP" OnValidSubmit="@Update">
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Descrição:</label>
                            <InputText class="w-25 form-control" id="telefone" @bind-Value="updateCP.descricao" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="email">Codigo:</label>
                            <InputNumber class="w-25 form-control" id="email" placeholder="Boas" @bind-Value="updateCP.codigo" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Codigo AT:</label>
                            <InputText class="w-25 form-control" id="telefone" @bind-Value="updateCP.codigoat" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="email">Inentário:</label>
                            <InputNumber class="w-25 form-control" id="email" placeholder="Boas" @bind-Value="updateCP.inventario" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Atualizar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (showModal2)
{
    <div class="modal fade show" id="myModal" style="display:block; background-color:rgba(128, 128, 128, 0.5);" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Inserir nova classificação</h4>
                    <button type="button" class="close" @onclick="@ModalCancel2">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <EditForm Model="@criarCP" OnValidSubmit="@Criar">
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Descrição:</label>
                            <InputText class="w-25 form-control" id="telefone" @bind-Value="criarCP.descricao" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="email">Codigo:</label>
                            <InputNumber class="w-25 form-control" id="email" placeholder="Boas" @bind-Value="criarCP.codigo" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Codigo AT:</label>
                            <InputText class="w-25 form-control" id="telefone" @bind-Value="criarCP.codigoat" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="email">Inentário:</label>
                            <InputNumber class="w-25 form-control" id="email" placeholder="Boas" @bind-Value="criarCP.inventario" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="@ModalCancel2">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Inserir Classificação</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}


<AuthorizeView Roles="Admin, Administração">
    <Authorized>

        <div class="container-fluid">

            <!-- Page Heading -->
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary" style="display: inline;">Listagem de Classificações</h6> <button type="submit" @onclick="@ModalShow2" class="btn btn-success btn-sm float-right"><i class="fas fa-plus"></i>Inserir Classificação Produto</button>
                </div>
                <div class="card-body">
                    <div class="table-responsive-sm">
                        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="dataTable_length"><label>Show <select name="dataTable_length" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> entries</label></div></div><div class="col-sm-12 col-md-6"><div id="dataTable_filter" class="dataTables_filter"><label>Pesquisar Encomenda:<input type="search" @bind="Filter" @bind:event="oninput" class="form-control form-control-sm" placeholder="" aria-controls="dataTable"></label></div></div></div><div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered table-hover table-sm dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                        <thead>
                                            <tr role="row"><th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 101px;">IDClassificação</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 170px;">Codigo</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 71px;">Descrição</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Contacto: activate to sort column ascending" style="width: 31px;">Codigo AT</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 68px;">Inventário</th><th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 101px;">Ações</th></tr>
                                        </thead>
                                        <tfoot>
                                            <tr><th rowspan="1" colspan="1">IDClassificação</th><th rowspan="1" colspan="1">Codigo</th><th rowspan="1" colspan="1">Descrição</th><th rowspan="1" colspan="1">Codigo AT</th><th rowspan="1" colspan="1">Inventário</th><th rowspan="1" colspan="1">Ações</th></tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var cp in @VCPS)
                                            {
                                                if (!IsVisible(cp))
                                                    continue;
                                                <tr style="height: 1em;">
                                                    <td class="sorting_1" style=" overflow: hidden; white-space: nowrap; " title="@cp.IDClassificacao">@cp.IDClassificacao</td>
                                                    <td style=" overflow: hidden; white-space: nowrap; " title="@cp.codigo">@cp.codigo</td>
                                                    <td style=" overflow: hidden; white-space: nowrap; " title="@cp.descricao">@cp.descricao</td>
                                                    <td style=" overflow: hidden; white-space: nowrap; " title="@cp.codigoat">@cp.codigoat</td>
                                                    <td style=" overflow: hidden; white-space: nowrap; " title="@cp.inventario">@cp.inventario</td>
                                                    <td><button class="btn btn-sm btn-primary btn-sm" @onclick="@ModalShow" style="margin-left:1rem"><i class="fas fa-pen"></i></button><button class="btn btn-sm btn-danger btn-sm" @onclick="() => Apagar(cp.IDClassificacao)" style="margin-left:0.3rem"><i class="fas fa-trash"></i></button></td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <h1>Não tem acesso a esta página</h1>
    </NotAuthorized>
</AuthorizeView>



@code {
    List<GoldYAN.Data.ClassificacaoProdutos> VCPS = new List<GoldYAN.Data.ClassificacaoProdutos>();

    Data.ClassificacaoProdutos updateCP = new Data.ClassificacaoProdutos();

    Data.ClassificacaoProdutos criarCP = new Data.ClassificacaoProdutos();

    bool showModal = false;
    bool showModal2 = false;


    protected override async Task OnInitializedAsync()
    {
        VCPS = VCP.GetAll();

        foreach (var banco in @VCPS)
        {
            updateCP.IDClassificacao = banco.IDClassificacao;
            updateCP.descricao = banco.descricao;
            updateCP.codigo = banco.codigo;
            updateCP.codigoat = banco.codigoat;
            updateCP.inventario = banco.inventario;
        }

    }

    public async Task Apagar(int id)
    {

        bool confirmation;

        confirmation = await js.InvokeAsync<bool>("confirm", "Quer mesmo apagar?");

        if (confirmation)
        {
            string message = VCP.Delete(id);
            OnInitializedAsync();
            Task.Delay(1000);
            {
                await js.InvokeVoidAsync("alert", @message);
            }
        }
    }

    public async Task Update()
    {
        VCP.Put(updateCP.IDClassificacao, updateCP);
        showModal = false;
    }

    public async Task Criar()
    {
        var resultado = VCP.Post(criarCP);
        StateHasChanged();
        showModal2 = false;
        VCPS = VCP.GetAll();

    }


    void ModalShow()
    {
        showModal = true;
    }
    void ModalCancel()
    {
        showModal = false;
    }
    void ModalShow2()
    {
        showModal2 = true;
    }
    void ModalCancel2()
    {
        showModal2 = false;
    }

    void ModalOk()
    {
        Console.WriteLine("Modal ok");
        showModal = false;
    }

    public string Filter { get; set; }

    public bool IsVisible(Data.ClassificacaoProdutos clp)
    {
        if (string.IsNullOrEmpty(Filter))
            return true;

        if (clp.codigo.ToString().Contains(Filter) || clp.codigoat.ToString().Contains(Filter) || clp.descricao.ToString().Contains(Filter))
            return true;

        return false;
    }

}
