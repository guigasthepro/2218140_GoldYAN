                            <label for="telefone">Descrição:</label>
                            <InputText class="w-25 form-control" id="telefone" @bind-Value="criarCP.descricao" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="email">Codigo:</label>
                            <InputNumber class="w-25 form-control" id="email" placeholder="Boas" @bind-Value="criarCP.codigo" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Codigo AT:</label>
                            <InputText class="w-25 form-control" id="telefone" @bind-Value="criarCP.codigoat" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="email">Inentário:</label>
                            <InputNumber class="w-25 form-control" id="email" placeholder="Boas" @bind-Value="criarCP.inventario" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="@ModalCancel2">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Inserir Classificação</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}


