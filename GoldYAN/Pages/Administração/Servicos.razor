@page "/servicos"
@using GoldYAN.Controller
@using GoldYAN.Data
@using System.Threading
@using Microsoft.Data.SqlClient
@using Microsoft.EntityFrameworkCore
@inject IJSRuntime js
@inject ServicosController SC


@if (showModal)
{
    <div class="modal fade show" id="myModal" style="display:block" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Atualizar Serviços</h4>
                    <button type="button" class="close" @onclick="@ModalCancel">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <EditForm Model="@updateServicos" OnValidSubmit="@Update">
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Código do Serviço:</label>
                            <InputText class="w-25 form-control" id="telefone" @bind-Value="updateServicos.codigo" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="email">Descrição do Serviço:</label>
                            <InputText class="w-25 form-control" id="email" placeholder="Boas" @bind-Value="updateServicos.descricao" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="email">Custo do Serviço:</label>
                            <InputNumber class="w-25 form-control" style="-moz-appearance: textfield;" id="email" placeholder="Boas" @bind-Value="updateServicos.custo" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Atualizar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (showModal2)
{
    <div class="modal fade show" id="myModal" style="display:block;background-color:rgba(128, 128, 128, 0.5);" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Inserir novo Serviço</h4>
                    <button type="button" class="close" @onclick="@ModalCancel2">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <EditForm Model="@criarServicos" OnValidSubmit="@Criar">
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Código do Serviço:</label>
                            <InputText class="w-25 form-control" id="telefone" @bind-Value="criarServicos.codigo" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="email">Descrição do Serviço:</label>
                            <InputText class="w-25 form-control" id="email" placeholder="Boas" @bind-Value="criarServicos.descricao" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="email">Custo do Serviço:</label>
                            <InputNumber class="w-25 form-control" style="-moz-appearance: textfield;" id="email" placeholder="Boas" @bind-Value="criarServicos.custo" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Inserir Banco</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}







