<AuthorizeView Roles="Admin, Administração">
    <Authorized>

        <div class="container-fluid">

            <!-- Page Heading -->
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary" style="display:inline;">Listagem de Colaboradores</h6> <button type="submit" @onclick="@AbrirModal2" class="btn btn-success btn-sm float-right"><i class="fas fa-plus"></i>&nbsp;Adicionar Colaborador</button>
                </div>
                <div class="card-body">
                    <div class="table-responsive-sm">
                        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="dataTable_length"><label>Show <select name="dataTable_length" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> entries</label></div></div><div class="col-sm-12 col-md-6"><div id="dataTable_filter" class="dataTables_filter"><label>Pesquisar Colaborador:<input type="search" @bind="Filter" @bind:event="oninput" class="form-control form-control-sm" placeholder="" aria-controls="dataTable"></label></div></div></div><div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered table-hover table-sm dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                        <thead>
                                            <tr role="row"><th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 20px;">IDColaborador</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 60px;">Codigo Colaborador</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 160px;">Telefone</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 20px;">Email</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 45px;">Custo</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 45px;">Ações</th></tr>
                                        </thead>
                                        <tfoot>
                                            <tr><th rowspan="1" colspan="1">IDColaborador</th><th rowspan="1" colspan="1">Codigo Colaborador</th><th rowspan="1" colspan="1">Telefone</th><th rowspan="1" colspan="1">Email</th><th rowspan="1" colspan="1">Custo</th><th rowspan="1" colspan="1">Ações</th></tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var colaboradores in listaColaboradores)
                                            {
                                                if (!IsVisible(colaboradores))
                                                    continue;

                                                <tr style="height: 1em;">
                                                    <td style=" overflow: hidden; white-space: nowrap; " title="@colaboradores.idcolaborador">@colaboradores.idcolaborador</td>
                                                    <td style=" overflow: hidden; white-space: nowrap; " title="@colaboradores.codigo">@colaboradores.codigo</td>
                                                    <td style=" overflow: hidden; white-space: nowrap; " title="@colaboradores.telefone">@colaboradores.telefone</td>
                                                    <td style=" overflow: hidden; white-space: nowrap; " title="@colaboradores.email">@colaboradores.email</td>
                                                    <td style=" overflow: hidden; white-space: nowrap; " title="@colaboradores.valor">@colaboradores.valor</td>
                                                    <td><button class="btn btn-sm btn-primary" @onclick="() => AbrirModal(colaboradores.idcolaborador)" style="margin-left:1rem"><i class="fas fa-pen"></i></button><button class="btn btn-sm btn-danger" @onclick="() => Apagar(colaboradores.idcolaborador)" style="margin-left:0.3rem"><i class="fas fa-trash"></i></button></td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <h1>Não tem acesso a esta página</h1>
    </NotAuthorized>
</AuthorizeView>

@code {


    List<Data.Colaboradores> listaColaboradores = new List<Data.Colaboradores>();
    Data.Colaboradores ecolaboradores = new Data.Colaboradores();
    Data.Colaboradores ccolaboradores = new Data.Colaboradores();
    bool showModal = false;
    bool showModal2 = false;


    protected override async Task OnInitializedAsync()
    {
        listaColaboradores = colaboradoresController.GetAll();
    }

    void AbrirModal(int id)
    {
        ecolaboradores = colaboradoresController.Get(id);
        showModal = true;
    }
    void FecharModal()
    {
        showModal = false;
    }
    void AbrirModal2()
    {
        showModal2 = true;
    }
    public async Task FecharModal2()
    {
        showModal2 = false;
    }

    public async Task CriarColaborador()
    {
        colaboradoresController.Post(ccolaboradores);
        showModal = false;
    }

    public async Task EditarColaborador()
    {
        colaboradoresController.Put(ecolaboradores.idcolaborador, ecolaboradores);
        showModal = false;

    }

    public string Filter { get; set; }

    public bool IsVisible(Data.Colaboradores colaboradores)
    {
        if (string.IsNullOrEmpty(Filter))
            return true;

        if (colaboradores.idcolaborador.ToString().Contains(Filter) || colaboradores.email.ToString().Contains(Filter) || colaboradores.telefone.ToString().Contains(Filter))
            return true;

        return false;
    }

    public async Task Apagar(int id)
    {

        bool confirmation;

        confirmation = await js.InvokeAsync<bool>("confirm", "Quer mesmo apagar?");

        if (confirmation)
        {
            string message = colaboradoresController.Delete(id);
            OnInitializedAsync();
            Task.Delay(1000);
            {
                await js.InvokeVoidAsync("alert", @message);
            }
        }
    }

}
