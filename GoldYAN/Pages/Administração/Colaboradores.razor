@page "/colaboradores"
@attribute [Authorize(Roles = "Admin , Dev")]





@if (showModal)
{
    <div class="modal fade show" id="myModal" style="display:block;background-color:rgba(128, 128, 128, 0.5);" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Atualizar Informação</h4>
                    <button type="button" class="close" @onclick="FecharModal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <EditForm Model="@ecolaboradores" OnValidSubmit="@EditarColaborador">
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Codigo:</label>
                            <InputText autocomplete="false" class="w-50 form-control" id="telefone" placeholder="Codigo Colaborador" @bind-Value="ecolaboradores.codigo" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Nome do Colaborador:</label>
                            <InputText autocomplete="false" class="w-50 form-control" id="telefone" placeholder="Nome do Colaborador" @bind-Value="ecolaboradores.descricao" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="codigo">Telefone do Colaborador:</label>
                            <InputText autocomplete="false" class="w-50 form-control" style="-moz-appearance: textfield;" id="codigo" placeholder="Telefone do Colaborador" @bind-Value="ecolaboradores.telefone" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Email do Colaborador:</label>
                            <InputText autocomplete="false" class="w-50 form-control" id="telefone" placeholder="Email Colaborador" @bind-Value="ecolaboradores.email" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="email">Custo hora:</label>
                            <InputNumber autocomplete="false" class="w-50 form-control" style="-moz-appearance: textfield;" id="email" placeholder="Custo do Colaboradors" @bind-Value="ecolaboradores.valor" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="FecharModal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Atualizar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

