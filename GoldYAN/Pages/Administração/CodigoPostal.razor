@using GoldYAN.Controller
@inject IJSRuntime js
@inject CodigoPostalController VCP
@attribute [Authorize]

@page "/codigopostal"

@if (showModal)
{
    <div class="modal fade show" id="myModal" style="display:block" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Atualizar Informação</h4>
                    <button type="button" class="close" @onclick="@ModalCancel">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <EditForm Model="@updateCP" OnValidSubmit="@Update">
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Descrição:</label>
                            <InputText class="w-25 form-control" id="telefone" @bind-Value="updateCP.desig_postal" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Atualizar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (showModal2)
{
    <div class="modal fade show" id="myModal" style="display:block; background-color:rgba(128, 128, 128, 0.5);" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Inserir novo código</h4>
                    <button type="button" class="close" @onclick="@ModalCancel2">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <EditForm Model="@criarCP" OnValidSubmit="@Criar">
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Descrição:</label>
                            <InputText class="w-25 form-control" id="telefone" @bind-Value="criarCP.desig_postal" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Inserir Codigo Postal</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

<AuthorizeView Roles="Admin">
    <Authorized>

        <div class="container-fluid">

            <!-- Page Heading -->
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary" style="display: inline;">Listagem de Codigo</h6> <button type="submit" @onclick="@ModalShow2" class="btn btn-success btn-sm float-right"><i class="fas fa-plus"></i>Inserir Codigo Postal</button>
                </div>
                <div class="card-body">
                    <div class="table-responsive-sm">
                        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="dataTable_length"><label>Show <select name="dataTable_length" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> entries</label></div></div><div class="col-sm-12 col-md-6"><div id="dataTable_filter" class="dataTables_filter"><label>Pesquisar Encomenda:<input type="search" @bind="Filter" @bind:event="oninput" class="form-control form-control-sm" placeholder="" aria-controls="dataTable"></label></div></div></div><div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered table-hover table-sm dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                        <thead>
                                            <tr role="row"><th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 101px;">Nome da Localidade</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 170px;">Numero Codigo Postal</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 67px;">Codigo Postal Externo</th><th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 101px;">Designação Postal</th><th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 101px;">Ações</th></tr>
                                        </thead>
                                        <tfoot>
                                            <tr><th rowspan="1" colspan="1">Nome da Localidade</th><th rowspan="1" colspan="1">Numero Codigo Postal</th><th rowspan="1" colspan="1">Codigo Postal Externo</th><th rowspan="1" colspan="1">Designação Postal</th><th rowspan="1" colspan="1">Ações</th></tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var cp in @VCPS)
                                            {
                                                if (!IsVisible(cp))
                                                    continue;
                                                <tr style="height: 1em;">
                                                    <td style=" overflow: hidden; white-space: nowrap; " title="@cp.nome_localidade">@cp.nome_localidade</td>
                                                    <td style=" overflow: hidden; white-space: nowrap; " title="@cp.num_cod_postal">@cp.num_cod_postal</td>
                                                    <td style=" overflow: hidden; white-space: nowrap; " title="@cp.ext_cod_postal">@cp.ext_cod_postal</td>
                                                    <td style=" overflow: hidden; white-space: nowrap; " title="@cp.desig_postal">@cp.desig_postal</td>
                                                    <td><button class="btn btn-sm btn-primary" @onclick="@ModalShow" style="margin-left:1rem"><i class="fas fa-pen"></i></button><button class="btn btn-sm btn-danger" @onclick="() => Apagar(cp.idcodigopostal)" style="margin-left:0.3rem"><i class="fas fa-trash"></i></button></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <h1>Não tem acesso a esta página</h1>
    </NotAuthorized>
</AuthorizeView>



@code {

    List<GoldYAN.Data.Codigopostal> VCPS = new List<GoldYAN.Data.Codigopostal>();

    Data.Codigopostal updateCP = new Data.Codigopostal();

    Data.Codigopostal criarCP = new Data.Codigopostal();

    bool showModal = false;
    bool showModal2 = false;

    protected override async Task OnInitializedAsync()
    {
        VCPS = VCP.Get();

        foreach (var cp in @VCPS)
        {
            updateCP.idcodigopostal = cp.idcodigopostal;
            updateCP.nome_localidade = cp.nome_localidade;
            updateCP.num_cod_postal = cp.num_cod_postal;
            updateCP.ext_cod_postal = cp.ext_cod_postal;
            updateCP.desig_postal = cp.desig_postal;
        }

    }

    public async Task Apagar(int id)
    {

        bool confirmation;

        confirmation = await js.InvokeAsync<bool>("confirm", "Quer mesmo apagar?");

        if (confirmation)
        {
            string message = VCP.Delete(id);
            OnInitializedAsync();
            Task.Delay(1000);
            {
                await js.InvokeVoidAsync("alert", @message);
            }
        }
    }

    public async Task Update()
    {
        VCP.Put(updateCP.idcodigopostal, updateCP);
        showModal = false;
    }

    public async Task Criar()
    {
        var resultado = VCP.Post(criarCP);
        StateHasChanged();
        showModal2 = false;
        VCPS = VCP.Get();

    }


    void ModalShow()
    {
        showModal = true;
    }
    void ModalCancel()
    {
        showModal = false;
    }

    void ModalShow2()
    {
        showModal2 = true;
    }
    void ModalCancel2()
    {
        showModal2 = false;
    }

    void ModalOk()
    {
        Console.WriteLine("Modal ok");
        showModal = false;
    }

    public string Filter { get; set; }

    public bool IsVisible(Data.Codigopostal cop)
    {
        if (string.IsNullOrEmpty(Filter))
            return true;

        if (cop.idcodigopostal.ToString().Contains(Filter) || cop.num_cod_postal.ToString().Contains(Filter) || cop.nome_localidade.ToString().Contains(Filter))
            return true;

        return false;
    }


}
