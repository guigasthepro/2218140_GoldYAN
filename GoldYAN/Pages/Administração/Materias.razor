@using GoldYAN.Controller
@inject IJSRuntime js
@page "/materiais"
@inject MateriasController VM

@if (showModal)
{
    <div class="modal fade show" id="myModal" style="display:block" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Atualizar Informação</h4>
                    <button type="button" class="close" @onclick="@ModalCancel">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <EditForm Model="@updateM" OnValidSubmit="@Update">
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Alcunha:</label>
                            <InputText class="w-25 form-control" id="telefone" @bind-Value="updateM.alcunha" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="email">Nome:</label>
                            <InputText class="w-25 form-control" id="email" placeholder="Boas" @bind-Value="updateM.nome" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Atualizar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (showModal2)
{
    <div class="modal fade show" id="myModal" style="display:block; background-color:rgba(128, 128, 128, 0.5);" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Inserir nova matéria</h4>
                    <button type="button" class="close" @onclick="@ModalCancel2">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <EditForm Model="@criarM" OnValidSubmit="@Criar">
                        <div class="form-group m-3 p-1">
                            <label for="telefone">Alcunha:</label>
                            <InputText class="w-25 form-control" id="telefone" @bind-Value="criarM.alcunha" />
                        </div>
                        <div class="form-group m-3 p-1">
                            <label for="email">Nome:</label>
                            <InputText class="w-25 form-control" id="email" placeholder="Boas" @bind-Value="criarM.nome" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Criar Matéria</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}


