                                                            <td style="overflow: hidden; white-space: nowrap;" title="@produto.quantidade">@Math.Round(produto.quantidade, 3)</td>
                                                            <td style="overflow: hidden; white-space: nowrap;" title="@produto.peso">@produto.peso</td>
